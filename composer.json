{
    "name": "phpactor/code-transform-extension",
    "description": "Code transform base package",
    "license": "MIT",
    "type": "phpactor-extension",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel@dantleech.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "phpactor/container": "^1.3.3",
        "phpactor/code-transform": "^0.4",
        "phpactor/class-to-file-extension": "~0.1",
        "phpactor/worse-reflection-extension": "^0.2.0@dev",
        "phpactor/php-extension": "^0.1"
    },
    "require-dev": {
        "phpactor/rpc-extension": "^0.1.0",
        "phpstan/phpstan": "~0.12.0",
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "~2.15.0",
        "phpactor/test-utils": "^1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Phpactor\\Extension\\CodeTransform\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpactor\\Extension\\CodeTransform\\Tests\\": "tests/"
        }
    },
    "extra": {
        "phpactor.extension_class": "Phpactor\\Extension\\CodeTransform\\CodeTransformExtension",
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    },
    "scripts": {
        "integrate": [
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/phpstan analyse lib -c phpstan.neon",
            "vendor/bin/phpunit"
        ]
    }
}